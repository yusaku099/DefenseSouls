<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true">
<shape android:shape="rectangle">
<gradient
android:startColor="#FFF0F0F0"
android:centerColor="#FFF099CC"
android:endColor="#FF993366"
android:angle="0"/>
<padding 
android:left="12dp"
android:top="7dp"
android:right="12dp"
android:bottom="7dp" />

<stroke
android:color="#FFFFFFFF"
android:width="1dp" />

</shape>
</item>

<item android:state_pressed="false">
<shape android:shape="rectangle">
<gradient
android:startColor="#FFF0F0F0"
android:centerColor="#FF9999CC"
android:endColor="#FF333366"
android:angle="0"/>
<padding 
android:left="12dp"
android:top="7dp"
android:right="12dp"
android:bottom="7dp" />

<size 
android:height="20dp"
android:width="120dp" />

<stroke
android:color="#FFFFFFFF"
android:width="1dp" />

</shape>
</item>

</selector>