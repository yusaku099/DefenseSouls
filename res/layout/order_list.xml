<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
    
    <ImageView 
       android:id="@+id/image_ordericon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"/>
    
    <TextView
	   android:id="@+id/order_stageTextView"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@id/image_ordericon"
	   android:paddingLeft="8dp"
	   style="@style/List001"/>
	   
    <TextView
        android:id="@+id/order_descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_stageTextView"
       android:layout_toRightOf="@id/image_ordericon"
        android:paddingLeft="8dp"
        style="@style/List002"/>
      
    <TextView
        android:id="@+id/order_levelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="12dp"
        style="@style/List002"/>
    
    
</RelativeLayout>